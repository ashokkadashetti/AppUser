
<% if current_user %>
	<h3>Hi <%= current_user.name %></h3>
	<table >
	  	<thead>
	    	<tr>
	    		<th>ID &nbsp&nbsp&nbsp&nbsp</th>
	      		<th>NAME &nbsp&nbsp&nbsp&nbsp</th>
	      		<th>EMAIL &nbsp&nbsp&nbsp&nbsp</th>
	      		<th colspan="3"></th>
	    	</tr>
	  	</thead>
	  	<tbody>
	  			<tr>
	  				<td><%= current_user.id %></td>
	  				<td><%= current_user.name %></td>
	  				<td><%= current_user.email %></td>
	  				<td>&nbsp&nbsp&nbsp&nbsp<%= link_to "Show", user_path(current_user) %>&nbsp</td>
	  			</tr>
	  	</tbody>
	</table>

<% else %>
<h4>You loged out..</h4>	
<% end %>

 